<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>
  <property>
    <name>drill_install_version</name>
    <value>1.14.0</value>
    <description>Drill version to install (only used when installing service)</description>
  </property>
  <property>
    <name>drill_install_dir</name>
    <value>/opt/apache-drill</value>
    <description>Location to install Drill</description>
  </property>
  <property>
    <name>drill_temp_file</name>
    <value>/tmp/apache-drill-1.14.0.tar.gz</value>
    <description>Drill Archive to deploy (Kept if exists, downloaded from Drill WebSite otherwise)</description>
  </property>
  <property>
    <name>hadoop_core_site</name>
    <value>/etc/hadoop/conf/core-site.xml</value>
    <description>Hadoop core-site.xml file location</description>
  </property>
  <property>
    <name>hadoop_hdfs_site</name>
    <value>/etc/hadoop/conf/hdfs-site.xml</value>
    <description>Hadoop hdfs-site.xml file location</description>
  </property>
</configuration>

